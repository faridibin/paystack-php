{
	"name": "faridibin/paystack-php",
	"description": "A modern, type-safe PHP SDK for Paystack payment processing",
	"type": "library",
	"license": "MIT",
	"autoload": {
		"psr-4": {
			"Faridibin\\Paystack\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Faridibin\\Paystack\\Tests\\": "tests/"
		}
	},
	"require": {
		"php": "^8.0",
		"guzzlehttp/guzzle": "^7.0",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"friendsofphp/php-cs-fixer": "^3.0",
		"phpstan/phpstan": "^1.0",
		"mockery/mockery": "^1.5"
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test-coverage": "vendor/bin/phpunit --coverage-html coverage",
		"format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"analyse": "vendor/bin/phpstan analyse"
	},
	"config": {
		"sort-packages": true
	}
}
